/* index.wxss */

.container {
    background-color: #F6F7F9;
    padding: 20rpx;
}

.header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #E4E7EB;
}

.sv__container {
    flex-grow: 1;
}

.sv__item {
    font-size: 32rpx;
    color: #333333;
    padding: 20rpx;
}

.sv__item.active {
    color: #FF3366;
}

.sv-manager {
    width: 60rpx;
    height: 60rpx;
}

.swiper__container {
    margin-top: 20rpx;
    height: 300rpx;
}

.swiper__content {
    position: relative;
    height: 100%;
}

.swiper__item {
    width: 100%;
    height: 100%;
}

.swiper__desc {
    position: absolute;
    bottom: 20rpx;
    left: 20rpx;
    color: #FFFFFF;
    font-size: 26rpx;
}

.swiper__text {
    font-weight: bold;
    margin-bottom: 10rpx;
}

.swiper__id {
    font-size: 22rpx;
}

.articles {
    margin-top: 20rpx;
}

