/* index.wxss */

.container {
  background-color: #FAFBFC;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #E1E4E8;
}

.sv__container {
  flex-grow: 1;
  transition: all 0.3s ease;
}

.sv__item {
  font-size: 32rpx;
  color: #333333;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.sv__item.active {
  color: #FF3366;
}

.sv-manager {
  width: 60rpx;
  height: 60rpx;
  transition: all 0.3s ease;
}

.swiper__container {
  margin-top: 20rpx;
  height: 300rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.swiper__content {
  position: relative;
  height: 100%;
}

.swiper__item {
  width: 100%;
  height: 100%;
  transition: all 0.3s ease;
}

.swiper__desc {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: #FFFFFF;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.swiper__text {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.swiper__id {
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.articles {
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

