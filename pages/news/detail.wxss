.page__detail{
  display: block;
  width: 720rpx; 
  margin: 0 auto; 
  background-color: #FAFBFC; 
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.detail__title{
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: 600;
  word-break: break-word;
  width: 100%; 
  text-align: left; 
  color: #2D3748;
}

.article__desc{
  margin: 30rpx 0;
  transition: all 0.3s ease;
}

.article__content{
  font-size: 28rpx;
  color: #333; 
  line-height: 42rpx;
  word-break: break-all;
  text-indent: 2em;
  transition: all 0.3s ease;
}

.detail__relation{
  margin-top: 60rpx;
  padding-bottom: 30rpx;
  transition: all 0.3s ease;
}

.relation__title{
  border-left: 6rpx solid #FF3366;
  padding-left: 30rpx; 
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.article__desc{
  padding-bottom: 30rpx; 
  border-bottom: 1rpx solid #E1E4E8;
  transition: all 0.3s ease;
}

.article__content {
  max-width: 720rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.article__content ._p, .article__content ._h1, .article__content ._h2, .article__content ._h3, .article__content ._h4 {
  line-height: 1.8;
  margin-bottom: 14px;
  transition: all 0.3s ease;
}

/* 收藏功能悬浮按钮 */
.float-button {
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #1AAD19;
  color: white;
  border-radius: 50%;
  z-index: 999;
}