/* app.wxss */

/* 页面样式 */
.page {
  min-height: 100%;
  flex: 1;
  background-color: #F8F8F8;
  font-size: 14px;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  overflow: hidden;
  line-height: 1.6;
}

/* 激活状态样式 */
.active {
  color: #007AFF;
  border-bottom: 2rpx solid #007AFF;
}

/** 全局 weui 文章样式 **/

/* 文章容器样式 */
.articles {
  background-color: #FFFFFF;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

/* 文章项样式 */
.article__item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #EAEAEA;
  padding: 30rpx 20rpx;
  position: relative;
  padding-bottom: 20rpx;
}

/* 文章缩略图样式 */
.article__thumb {
  width: 160rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

/* 文章图片样式 */
.article__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 文章信息样式 */
.article__info {
  flex: 1;
}

/* 文章标题样式 */
.article__title {
  font-weight: 500;
  font-size: 26rpx;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 多行标题样式 */
.article__title__large {
  -webkit-line-clamp: 3;
}

/* 文章描述样式 */
.article__desc {
  color: #999999;
  font-size: 24rpx;
  line-height: 1.4;
  margin-top: 8rpx;
  width: 100%;
}

/* 文章项封面样式 */
.article__item__cover {
  display: block;
}

/* 封面样式 */
.article__cover {
  padding-bottom: 10rpx;
  overflow: hidden;
}

/* 广告样式 */
.article__ad {
  width: 100%;
  height: 240rpx;
  border-radius: 10rpx;
}

/* 备注样式 */
.article__remark {
  bottom: 0;
  width: 750rpx;
  display: block;
  font-size: 28rpx;
}

/* 文章来源样式 */
.article__source {
  color: #007AFF;
  border: 1rpx solid #007AFF;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  margin-right: 20rpx;
}

/* 文章时间样式 */
.article__time {
  margin-right: 10rpx;
}

/* 文章统计样式 */
.article__count {
  float: right;
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 20rpx;
  font-weight: 500;
}

/* 文章图标样式 */
.article__icon {
  width: 29rpx;
  height: 29rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}

/* 图片视图样式 */
.article__imgview {
  width: 200rpx;
  height: 142rpx;
  padding: 15rpx;
}

/* 底部工具栏样式 */
.weui-footer {
  color: #999999;
  font-size: 14px;
  text-align: center;
  background-color: #FFFFFF;
  padding: 20rpx;
}

/* 底部固定工具栏样式 */
.weui-footer_fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

/* 底部工具栏链接样式 */
.weui-footer__links {
  font-size: 0;
}

/* 底部工具栏链接项样式 */
.weui-footer__link {
  padding-top: 20rpx;
  display: inline-block;
  vertical-align: top;
  margin: 0 .62em;
  position: relative;
  font-size: 14px;
  color: #586C94;
  margin-bottom: 22rpx;
}

/* 底部工具栏链接项伪元素样式 */
.weui-footer__link:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1rpx solid #C7C7C7;
  color: #C7C7C7;
  left: -0.65em;
  top: .36em;
  bottom: .36em;
}

/* 底部工具栏第一个链接项伪元素样式 */
.weui-footer__link:first-child:before {
  display: none;
}

/* 底部工具栏文本样式 */
.weui-footer__text {
  padding: 0 .34em;
  font-size: 12px;
}
