.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  box-shadow: 0px -2px 5px rgba(0, 0, 0, 0.1);
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
}

.tab-bar-icon {
  width: 24px;
  height: 24px;
}

.tab-bar-text {
  font-size: 12px;
  margin-top: 6px;
  color: #333333;
}
